<h3>Bluetooth Motion Head Daily Summary for <%= @date %></h3>

<p>
  There were <%= pluralize(@count, 'request', 'requests') %> unique requests yesterday.
</p>

<table>
  <tr>
    <th>Created At</th>
    <th>City</th>
    <th>State</th>
  </tr>
  <% @requests.each do |request| %>
    <tr>
      <td><%=h request.created_at %></td>
      <td><%=h request.city %></td>
      <td><%=h request.region %></td>
    </tr>
  <% end %>
</table>

